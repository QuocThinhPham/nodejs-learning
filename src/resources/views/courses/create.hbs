<form class="mt-4" method="POST" action="/courses/store">
  <h3>Thêm khóa học</h3>

  <div class="mb-3">
    <label for="name" class="form-label">Tên khóa học</label>
    <input type="text" name="name" class="form-control" id="name" />
  </div>

  <div class="mb-3">
    <label for="desc" class="form-label">Mô tả</label>
    <textarea name="description" class="form-control" id="desc"></textarea>
  </div>

  <div class="mb-3">
    <label for="videoId" class="form-label">Video ID</label>
    <input type="text" name="videoId" class="form-control" id="videoId" />
  </div>

  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </div>
</form>